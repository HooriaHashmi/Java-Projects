public class Vowel_count {
    public static void main(String[] args) {
        String str = "Programming is fun";
        int count = 0;
      for (char ch : str.to_lowercase().to_chararray()) {
            if ("aeiou".indexOf(ch) != -1) count++;
        }
        System.out.println("Number of vowels: " + count);
    }
}
